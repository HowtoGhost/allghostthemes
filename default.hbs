    <script>
      jQuery.extend( jQuery.fn.dataTableExt.oSort, {
          "currency-pre": function ( a ) {
              a = (a==="-") ? 0 : a.replace( /[^\d\-\.]/g, "" );
              return parseFloat( a );
          },
       
          "currency-asc": function ( a, b ) {
              return a - b;
          },
       
          "currency-desc": function ( a, b ) {
              return b - a;
          }
      })
    </script>

    <script>
      $(document).ready(function() {
        //Dont show these until they are ready and all the posts are loaded
        //Stops a weird milisecond of no css
        $('.navbar').show();
        $('.content').show();

        //On scroll, make the top 2nd nav fixed to the top
        var secondaryNav = $('#secondary-nav-top'),
        secondaryNavTopPosition = secondaryNav.offset().top;
       
        $(window).on('scroll', function(){
          
          if($(window).scrollTop() > secondaryNavTopPosition ) {
            secondaryNav.addClass('navbar-fixed-top');  
          } else {
            secondaryNav.removeClass('navbar-fixed-top');
          }
        });
      });
    </script>  
