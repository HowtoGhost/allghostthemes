{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}
   <!-- <script src="{{asset "js/jquery-1.11.0.min.js"}}"></script>
    <link rel="stylesheet" href="{{asset "css/bootstrap.min.css"}}">
    <script src="{{asset "js/bootstrap.min.js"}}"></script>-->
    
<main class="content post-content" role="main">

    <article class="{{post_class}}">

        {{! Everything inside the #post tags pulls data from the post }}
        {{#post}}

           <!-- <div id="problemEmail"><a href="mailto:info@allaboutghost.com?subject=AllGhostThemes - {{title}}">
Report problem or change</a></div> -->
                <section class="shareIcons">
                    <h4>Share this post - <a class="icon-twitter" href="http://twitter.com/share?text={{encode title}}&url={{url absolute="true"}}"
                        onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                        <span class="hidden">Twitter</span>
                    </a>&nbsp<a class="icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                        onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                        <span class="hidden">Facebook</span>
                    </a>&nbsp<a class="icon-google-plus" href="https://plus.google.com/share?url={{url absolute="true"}}"
                       onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                        <span class="hidden">Google+</span>
                    </a></h4>
                </section>


            <section class="post-content">
                {{content}}

                <div class="next-steps">
                    <div class="next-steps-header">Next Steps:</div>

                    <div class="next-steps-step"><a href="https://ghostforbeginners.com/how-to-upload-a-theme/">Upload Your New Theme</a></div>
                    <div class="next-steps-info">After downloading your theme, see how to upload your theme to one of the three most popular Ghost hosting platforms
                    </div>

                    <div class="next-steps-step"><a href="https://ghostforbeginners.com/theming/">Make Theme Adjustments</a></div>
                    <div class="next-steps-info">If your theme is missing a feature you would like to add, check our <a href="https://ghostforbeginners.com/theming/">theme section</a> of Ghost for Beginners for tutorials</div>
                </div>
            </section>

            <script>
                var demo=$('.themedemo').attr('src');
                if (demo != undefined) {
                    $('.post-content h3').append(" - <a class='demoLink' target='_blank' href='"+demo+"'>Demo</a>");
                }

                $('.dowloadLink, moneyLink').attr('target','_blank'); //Adding open in new tab to download/purchase link
            </script>
			
